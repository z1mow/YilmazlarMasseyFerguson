<!-- Custom Styles -->
<style>
  :root {
    --primary-color: #E31E24;
    --secondary-color: #333333;
    --light-gray: #f8f9fa;
  }
  
  /* Hero Section */
  .contact-hero-section {
    background: linear-gradient(rgba(0,0,0,0.65), rgba(0,0,0,0.65)), url('<%= asset_path("contact-banner.jpg") %>');
    background-size: cover;
    background-position: center;
    min-height: 50vh;
    position: relative;
  }
  
  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.4) 100%);
  }
  
  .z-index-1 {
    z-index: 1;
  }
  
  .text-shadow {
    text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
  }
  
  /* Header Styles */
  .contact-header {
    background-color: var(--light-gray);
    position: relative;
    padding: 5rem 0;
    border-bottom: 1px solid rgba(0,0,0,0.05);
  }
  
  /* Section Headers */
  .title-separator {
    width: 80px;
    height: 3px;
    background-color: var(--primary-color);
  }
  
  /* Location Cards */
  .location-icon-container {
    text-align: center;
  }
  
  .location-icon {
    width: 80px;
    height: 80px;
    background-color: var(--primary-color);
    color: white;
    border-radius: 50%;
    font-size: 2rem;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 10px 25px rgba(227, 30, 36, 0.2);
  }
  
  .hours-icon {
    width: 80px;
    height: 80px;
    background-color: white;
    color: var(--primary-color);
    border-radius: 50%;
    font-size: 2rem;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 10px 25px rgba(255, 255, 255, 0.2);
  }
  
  .hover-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .hover-card:hover {
    transform: translateY(-10px);
  }
  
  .icon-circle {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1rem;
    flex-shrink: 0;
  }
  
  /* Map Container */
  .map-container {
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    border-radius: 10px;
    overflow: hidden;
  }
  
  /* Form Elements */
  .form-control, .form-select {
    border: 1px solid #dee2e6;
    padding: 0.75rem 1rem;
    font-size: 1rem;
  }
  
  .form-control:focus, .form-select:focus {
    border-color: rgba(227, 30, 36, 0.5);
    box-shadow: 0 0 0 0.25rem rgba(227, 30, 36, 0.15);
  }
  
  /* CSS Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .animated-card {
    opacity: 0;
    animation: fadeInUp 0.6s ease forwards;
  }

  .fade-in-up {
    opacity: 0;
    animation: fadeInUp 0.6s ease forwards;
  }

  .fade-in {
    opacity: 0;
    animation: fadeIn 0.8s ease forwards;
  }
  
  /* Responsive Adjustments */
  @media (max-width: 992px) {
    .contact-header {
      padding: 3rem 0;
    }
    
    .location-icon, .hours-icon {
      width: 70px;
      height: 70px;
      font-size: 1.75rem;
    }
  }
  
  @media (max-width: 768px) {
    .contact-details {
      flex-direction: column;
    }
    
    .icon-circle {
      width: 35px;
      height: 35px;
      font-size: 0.9rem;
    }
  }
</style>

