<!-- Page Header -->
<div class="bg-light py-5">
  <div class="container">
    <h1 class="display-4">İletişim</h1>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to "Ana Sayfa", root_path %></li>
        <li class="breadcrumb-item active" aria-current="page">İletişim</li>
      </ol>
    </nav>
  </div>
</div>

<!-- Contact Info -->
<section class="py-5">
  <div class="container">
    <div class="row">
      <!-- Contact Form -->
      <div class="col-lg-6 mb-4 mb-lg-0">
        <div class="card border-0 shadow-sm">
          <div class="card-body p-4">
            <h3 class="mb-4">Bize Ulaşın</h3>
            <%= form_with(url: contact_path, local: true, class: "contact-form") do |f| %>
              <div class="mb-3">
                <%= f.label :name, "Adınız Soyadınız", class: "form-label" %>
                <%= f.text_field :name, class: "form-control", required: true %>
              </div>
              
              <div class="mb-3">
                <%= f.label :email, "E-posta Adresiniz", class: "form-label" %>
                <%= f.email_field :email, class: "form-control", required: true %>
              </div>
              
              <div class="mb-3">
                <%= f.label :phone, "Telefon Numaranız", class: "form-label" %>
                <%= f.telephone_field :phone, class: "form-control", required: true %>
              </div>
              
              <div class="mb-3">
                <%= f.label :subject, "Konu", class: "form-label" %>
                <%= f.text_field :subject, class: "form-control", required: true %>
              </div>
              
              <div class="mb-3">
                <%= f.label :message, "Mesajınız", class: "form-label" %>
                <%= f.text_area :message, class: "form-control", rows: 5, required: true %>
              </div>
              
              <%= f.submit "Gönder", class: "btn btn-danger" %>
            <% end %>
          </div>
        </div>
      </div>
      
      <!-- Contact Information -->
      <div class="col-lg-6">
