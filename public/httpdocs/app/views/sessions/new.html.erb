<div class="container">
  <div class="row justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="col-md-6 col-lg-4">
      <div class="card shadow">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Admin Girişi</h2>

          <% if flash[:alert] %>
            <div class="alert alert-danger">
              <%= flash[:alert] %>
            </div>
          <% end %>

          <%= form_with(url: login_path, method: :post, class: 'needs-validation') do |f| %>
            <div class="mb-3">
              <%= f.label :username, 'Kullanıcı Adı', class: 'form-label' %>
              <%= f.text_field :username, required: true, class: 'form-control' %>
            </div>

            <div class="mb-3">
              <%= f.label :password, 'Şifre', class: 'form-label' %>
              <%= f.password_field :password, required: true, class: 'form-control' %>
            </div>

            <div class="d-grid gap-2">
              <%= f.submit 'Giriş Yap', class: 'btn btn-primary btn-lg' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
