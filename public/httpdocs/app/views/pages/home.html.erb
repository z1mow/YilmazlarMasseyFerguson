<!-- Hero Section -->
<div class="hero-section position-relative">
  <%= image_tag "hero-banner.png", class: "hero-background", alt: "Massey Ferguson Banner" %>
  <div class="hero-overlay"></div>
  <div class="hero-content">
    <div class="container text-center">
      <h1 class="display-3 fw-bold mb-3">Yılmazlar Massey Ferguson</h1>
      <p class="lead mb-4">1969'dan beri güveninizle büyüyoruz</p>
    </div>
  </div>
</div>

<!-- Features Section -->
<section class="py-5">
  <div class="container">
    <div class="row g-4">
      <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm text-center">
          <div class="card-body">
            <div class="text-danger mb-3">
              <i class="fas fa-tractor fa-3x"></i>
            </div>
            <h3 class="card-title h4">Satış</h3>
            <p class="card-text text-muted mb-4">En yeni Massey Ferguson modellerini keşfedin.</p>
            <%= link_to "Detaylı Bilgi", products_path, class: "btn btn-outline-danger px-4" %>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm text-center">
          <div class="card-body">
            <div class="text-danger mb-3">
              <i class="fas fa-tools fa-3x"></i>
            </div>
            <h3 class="card-title h4">Servis</h3>
            <p class="card-text text-muted mb-4">Profesyonel servis hizmetlerimizle yanınızdayız.</p>
            <%= link_to "Servis Hizmetleri", service_path, class: "btn btn-outline-danger px-4" %>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm text-center">
          <div class="card-body">
            <div class="text-danger mb-3">
              <i class="fas fa-cogs fa-3x"></i>
            </div>
            <h3 class="card-title h4">Yedek Parça</h3>
            <p class="card-text text-muted mb-4">Orijinal Massey Ferguson yedek parçaları.</p>
            <%= link_to "Yedek Parça", spare_parts_path, class: "btn btn-outline-danger px-4" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- About Section -->
<section class="bg-light py-5">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-6">
        <h2 class="mb-4">50 Yılı Aşkın Tecrübe</h2>
        <p class="lead">1969'dan beri Massey Ferguson'un güvenilir yetkili satıcısı olarak hizmetinizdeyiz.</p>
        <p>Kaliteli ve güvenilir hizmet anlayışımızla müşteri memnuniyetini her zaman ön planda tutuyoruz.</p>
        <%= link_to "Daha Fazla Bilgi", about_path, class: "btn btn-danger px-4" %>
      </div>
      <div class="col-md-6">
        <%= image_tag "about.jpg", class: "img-fluid rounded shadow", alt: "Yılmazlar Massey Ferguson Tarihçe" if File.exist?(Rails.root.join("app/assets/images/about.jpg")) %>
      </div>
    </div>
  </div>
</section>

<!-- Contact CTA -->
<section class="py-5">
  <div class="container">
    <div class="row justify-content-center text-center">
      <div class="col-md-8">
        <h2 class="mb-4">Bizimle İletişime Geçin</h2>
        <p class="lead mb-4">Sorularınız için bize ulaşın, size yardımcı olmaktan mutluluk duyarız.</p>
        <div class="row g-3 justify-content-center">
          <div class="col-auto">
            <a href="tel:03422352864" class="btn btn-outline-danger px-4">
              <i class="fas fa-phone me-2"></i>0342 235 2864
            </a>
          </div>
          <div class="col-auto">
            <%= link_to contact_path, class: "btn btn-danger px-4" do %>
              <i class="fas fa-envelope me-2"></i>İletişim Formu
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section> 